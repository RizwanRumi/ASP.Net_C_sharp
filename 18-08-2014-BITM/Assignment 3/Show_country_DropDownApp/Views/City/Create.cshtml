@model Show_country_DropDownApp.Models.City

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create City</h4>
        <hr />
        @Html.ValidationSummary(true)
       
        <div class="form-group">
            @Html.RadioButton("searchType", "CityName",true) 
            @Html.LabelFor(model => model.CityName, "City Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CityName)
                @Html.ValidationMessageFor(model => model.CityName)
            </div>
        </div>

       

        <div class="form-group">
            @Html.RadioButton("searchType", "countryId", true)
            
            @Html.LabelFor(model => model.CountryId, "Country Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CountryId", String.Empty)
                @Html.ValidationMessageFor(model => model.CountryId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

