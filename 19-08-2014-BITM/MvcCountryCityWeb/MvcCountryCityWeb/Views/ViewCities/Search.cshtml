@*@model MvcCountryCityWeb.Models.City*@

@{
//    ViewBag.Title = "Create";
//    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            @Html.RadioButton("searchType", "cityName", true)
            @Html.Label("cityName", "City Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("cityName")
                @Html.ValidationMessage("cityName")
            </div>
        </div>

        <div class="form-group">
            @Html.RadioButton("searchType", "countryId", false)
            @Html.Label("CountryId", "Country Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CountryId", String.Empty)
                @Html.ValidationMessage("CountryId")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
