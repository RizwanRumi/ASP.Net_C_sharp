@using Show_country_DropDownApp.Models
@model IEnumerable<Show_country_DropDownApp.Models.City>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @{
        City aCity = new City();
        @Html.Partial("SearchCountry", aCity)
    }
</p>

<table class="table">
    <tr>
        <th>
           Country Name
        </th>
        <th>
            About Country
        </th>
        <th>
            No of City
        </th>
        <th>
            No of Dwellers
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Countries.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Countries.About)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityName.Count())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfDwellers.Count())
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CityId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CityId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CityId })
            </td>
        </tr>
    }

</table>
